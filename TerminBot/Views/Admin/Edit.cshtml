@model TerminBot.Models.Appointment
@using static DateTimeUtils
@using static BusinessRules
@{
    ViewData["Title"] = "Uredi rezervaciju";
    var lang = "hr";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Uredi rezervaciju</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-body-tertiary">
    <div class="container py-4">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="m-0">Uredi rezervaciju</h4>
            <a class="btn btn-outline-secondary" href="/admin">Natrag</a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post" action="/admin/edit/@Model.Id">
                    @Html.AntiForgeryToken()

                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label class="form-label">Ime</label>
                            <input name="name" class="form-control" value="@Model.UserName" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">Kontakt</label>
                            <input name="contact" class="form-control" value="@Model.Contact" />
                        </div>

                        <div class="col-6 col-md-3">
                            <label class="form-label">Datum (dd.MM.)</label>
                            <input name="day" class="form-control" value="@(string.IsNullOrEmpty(Model.DayIso) ? Model.Day : PrettyDate(Model.DayIso))" />
                        </div>
                        <div class="col-6 col-md-3">
                            <label class="form-label">Vrijeme (HH:mm)</label>
                            <input name="time" class="form-control" value="@(string.IsNullOrEmpty(Model.TimeIso) ? Model.Time : Model.TimeIso)" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label">Usluga</label>
                            <input name="service" class="form-control" value="@Model.ServiceType" placeholder="npr. it / vodoinstalacija / klima" />
                        </div>
                    </div>

                    <div class="mt-4 d-flex gap-2">
                        <button class="btn btn-primary">Spremi</button>
                        <a class="btn btn-outline-secondary" href="/admin">Odustani</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-3 small text-muted">
            <div><strong>Kod:</strong> <code>@Model.BookingCode</code></div>
            <div><strong>UserId:</strong> <code>@Model.UserId</code></div>
            <div><strong>Kreirano:</strong> @Model.CreatedAt</div>
        </div>

    </div>
</body>
</html>
